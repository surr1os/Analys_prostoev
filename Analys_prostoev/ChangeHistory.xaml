<Window x:Class="Analys_prostoev.ChangeHistory"
        Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="История изменения простоев" Height="455" Width="430" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid Margin="10,39,10,70" AutoGenerateColumns="True" 
              IsReadOnly="True" RowBackground="#CCCCCC" 
              AlternatingRowBackground="#C0C0C0" x:Name="HistoryTable"/>
        <ComboBox Height="24" Margin="10,10,10,0" VerticalAlignment="Top"
                  x:Name="selectComboBox" IsEditable="True"
        IsReadOnly="True" Text="Выберите участок"/>
        <Button Content="Скрыть" Margin="90,0,90,25" Background="#FFF046" Height="33" VerticalAlignment="Bottom"/>

    </Grid>


</Window>
