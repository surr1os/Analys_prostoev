<Window x:Class="Analys_prostoev.MainWindow"
        Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="497" Width="922" MinWidth="1500" MinHeight="800">
    
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="887*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DatePicker x:Name="startDatePicker" Grid.Row="0" Margin="10,10,10,10" MaxWidth="157" MaxHeight="30" MinWidth="157" MinHeight="30" Grid.ColumnSpan="2"/>
        <DatePicker x:Name="endDatePicker" Grid.Row="1" Margin="1,10,4,10" MinWidth="157" MinHeight="30" MaxWidth="157" MaxHeight="30" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="selectComboBox" Grid.Row="1" Margin="3,10,485,10" MinWidth="230" MinHeight="30" MaxWidth="230" MaxHeight="30" IsEditable="True"
 IsReadOnly="True"
 Text="Выберите участок" Grid.ColumnSpan="2"/>
        <Button Content="Загрузить" Click="Button_Click" Grid.Row="2" Margin="10,10,10,10" MaxWidth="252" MaxHeight="44" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="DataGridTable" Grid.Row="3" Margin="10,10,10,10" AutoGenerateColumns="True" MouseDoubleClick="DataGrid_MouseDoubleClick" IsReadOnly="True" Grid.ColumnSpan="2" RowBackground="#FFF046" AlternatingRowBackground="#C0C0C0">
         
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#C0C0C0"/>
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="1" />
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</Window>
