<Window x:Class="Analys_prostoev.MainWindow"
		Loaded="Window_Loaded"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
		mc:Ignorable="d"
		Style="{DynamicResource WindowStyle}"
		Title="Анализ простоев" Height="802" Width="1577" MinWidth="1000" WindowStartupLocation="CenterScreen" FontFamily="Brutal Type" WindowState="Maximized">

    <Window.Resources>

        <Image x:Key="Play" Source="Start.png"/>
        <Image x:Key="Stop" Source="Stop.png"/>

    </Window.Resources>

    <Grid Style="{DynamicResource GridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="713*"/>
        </Grid.RowDefinitions>
        <StackPanel  Width="184" Margin="119,10,0,0" HorizontalAlignment="Left" Height="61" VerticalAlignment="Top">
            <Label Style="{DynamicResource LabelStyle}" FontFamily="Brutal Type" Content="Время начала" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
            <xctk:DateTimePicker FontFamily="Brutal Type" x:Name="startDatePicker" Margin="5" Width="169" Height="35" Format="Custom" FormatString="dd.MM.yyyy HH:mm:ss"/>
        </StackPanel>
        <StackPanel Width="184" Margin="308,10,0,0" HorizontalAlignment="Left" Height="61" VerticalAlignment="Top">
            <Label Style="{DynamicResource LabelStyle}" FontFamily="Brutal Type" Content="Время окончания" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
            <xctk:DateTimePicker FontFamily="Brutal Type" x:Name="endDatePicker" Margin="5" Width="174" Height="32" Format="Custom" FormatString="dd.MM.yyyy HH:mm:ss"/>
        </StackPanel>
        <StackPanel  Width="228" Margin="492,11,0,0" HorizontalAlignment="Left" Height="61" VerticalAlignment="Top">
            <Label Style="{DynamicResource LabelStyle}" FontFamily="Brutal Type" Content="Тип выборки" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
            <ComboBox FontFamily="Brutal Type" x:Name="selectRowComboBox" IsEditable="True"
			IsReadOnly="True" Text="Все строки" Margin="5" Background="White" Width="216" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>

        <Button FontFamily="Brutal Type" Background="#FFF046" Content="Загрузить" Click="GetTable" Margin="726,38,0,0" Width="92" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left"/>



        <Button x:Name="toggleButton" Width="30" BorderBrush="{x:Null}" Click="toggle_Click" Background="{x:Null}" Content="{DynamicResource Play}" Margin="831,40,0,0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock><Run Text="Автоматически загружает таблицу."/></TextBlock>
                        <TextBlock><Run Text="Изначальное значение: раз в 5 минут."/></TextBlock>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>


        <StackPanel Margin="866,9,0,0" Height="62" HorizontalAlignment="Left" Width="126" VerticalAlignment="Top">
            <Label Style="{DynamicResource LabelStyle}" Content="Авто загрузка" Width="96" FontFamily="Brutal Type" FontWeight="Bold" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.484,0.318"/>
            <ComboBox IsReadOnly="True" Text="5 минут" x:Name="TimerValue" Width="114" Height="34" FontFamily="Brutal Type" IsEditable="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <ComboBoxItem Content="5 минут"/>
                <ComboBoxItem Content="10 минут"/>
                <ComboBoxItem Content="15 минут"/>
                <ComboBoxItem Content="30 минут"/>
                <ComboBoxItem Content="1 час"/>
            </ComboBox>
        </StackPanel>


        <DataGrid Style="{DynamicResource DataGridStyle}" x:Name="DataGridTable" Margin="145,10,10,63" AutoGenerateColumns="True" SelectionChanged="DataGridTable_SelectionChanged"
			 MouseDoubleClick="DataGrid_MouseDoubleClick" IsReadOnly="True" FontFamily="Brutal Type" Grid.Row="1" RowHeaderWidth="0">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Click="CreateMenuItem_Click" FontFamily="Brutal Type"/>
                    <MenuItem Header="Изменить" x:Name="Edit_MenuItem" Click="ChangeMenuItem_Click" FontFamily="Brutal Type"/>
                    <MenuItem Header="Удалить" x:Name="Delete_MenuItem" Click="DeleteMenuItem_Click" FontFamily="Brutal Type"/>
                    <MenuItem Header="Аннулировать" x:Name="Cancel_MenuItem" Click="CanselMenuItem_Click" FontFamily="Brutal Type"/>
                    <MenuItem Header="История изменений" Click="ChangeHistoryItem_Click" FontFamily="Brutal Type"/>
                    <MenuItem Header="Разделить" x:Name="Manual_Division" Click="Manual_Division_Click" FontFamily="Brutal Type"/>
                    <MenuItem Header="Объединить" x:Name="Combining_Downtime" Click="Combining_Downtime_Click" FontFamily="Brutal Type"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>



        <Border BorderBrush="Black" BorderThickness="1" Margin="10,0,10,10" Grid.Row="1" Background="#FFF046" Height="48" VerticalAlignment="Bottom">
            <Button FontFamily="Brutal Type" Background="#FFABADB3" Content="Выгрузить в Excel" Click="Button_Click_Excel" MaxWidth="252" MaxHeight="44" Width="126" Height="30" Margin="9,8,0,8" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Foreground="#FF1E1E1E"/>
        </Border>
        <Label  FontFamily="Brutal Type" Content="Сменить тему:" Margin="0,0,106,21" Grid.Row="1" HorizontalContentAlignment="Center" FontWeight="Bold" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="104"/>
        <Button Margin="0,0,26,16" Background="#FF333333" Grid.Row="1" Click="DarkThemeButton_Click" HorizontalAlignment="Right" Width="35" Height="35" VerticalAlignment="Bottom">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Ellipse Fill="#FF333333" Stroke="#FF1E1E1E" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Margin="0,0,66,16" Background="#FFEAEAEA" Content="" Grid.Row="1" Click="WhiteThemeButton_Click" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="35">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Ellipse Fill="#FFEAEAEA" Stroke="#FFACACAC" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <ListBox Style="{DynamicResource ListBoxStyle}" x:Name="RegionsLB" 
                 SelectionMode="Multiple"
                 Margin="10,12,0,383" Grid.Row="1" 
                 HorizontalAlignment="Left" Width="130">
        </ListBox>
        <Image Margin="0,0,215,12" x:Name="Logo" Source="/cyberkot.png" HorizontalAlignment="Right" Width="83" Stretch="Fill" Grid.Row="1" Height="43" VerticalAlignment="Bottom"/>
        <Button Content="Добавить новую категорию" HorizontalAlignment="Left" Margin="152,0,0,19" Grid.Row="1" Width="177"  Background="#FFABADB3" Click="CreateButton_Click" Height="30" VerticalAlignment="Bottom"/>

        <Button FontFamily="Brutal Type" Background="#FFF046" Content="Очистить" HorizontalAlignment="Left" Height="33" Margin="10,40,0,0" VerticalAlignment="Top" Width="104" Click="ResetButton_Click"/>
        <ComboBox x:Name="SortingColumn" HorizontalAlignment="Left" Height="30" Margin="10,0,0,308" Grid.Row="1" VerticalAlignment="Bottom" Width="130" SelectionChanged="SortingColumn_SelectionChanged" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="Sorting" HorizontalAlignment="Left" Height="30" Margin="10,0,0,273" Grid.Row="1" VerticalAlignment="Bottom" Width="130" SelectionChanged="Sorting_SelectionChanged" VerticalContentAlignment="Center"/>
        <Label FontWeight="Bold" FontFamily="Brutal Type" Style="{DynamicResource LabelStyle}" Content="Сортировка" HorizontalAlignment="Left" Height="35" Margin="10,0,0,343" Grid.Row="1" VerticalAlignment="Bottom" Width="130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Label FontWeight="Bold" FontFamily="Brutal Type" Style="{DynamicResource LabelStyle}" Content="Сумма периодов" HorizontalAlignment="Left" Margin="10,0,0,112" Grid.Row="1" Width="130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Bottom"/>
        <TextBox IsReadOnly="True" x:Name="TotalSum" HorizontalAlignment="Left" Margin="10,0,0,73" Grid.Row="1" TextWrapping="Wrap" Text="0 мин." Width="130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="34" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
