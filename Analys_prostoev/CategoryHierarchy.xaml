<Window x:Class="Analys_prostoev.CategoryHierarchy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Analys_prostoev"
        mc:Ignorable="d"
        Title="CategoryHierarchy" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="TreeViewCategories" SelectedItemChanged="TreeViewCategories_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubcategoriesOne}">
                    <TextBlock Text="{Binding CategoryName}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding SubcategoriesSecond}">
                            <TextBlock Text="{Binding SubcategoryOneName}" />
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SubcategorySecondName}"/>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <TextBox Name="categoryOneTextB" TextWrapping="Wrap" Text="category_one" Margin="152,63,-142,302" MinWidth="250" MinHeight="40" MaxWidth="250" MaxHeight="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="categoryTwoTextB" TextWrapping="Wrap" Text="category_two" Margin="157,106,-137,237" MinWidth="250" MinHeight="40" MaxWidth="250" MaxHeight="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="categoryThirdTextB" TextWrapping="Wrap" Text="category_third" Margin="150,164,-144,164" MinWidth="250" MinHeight="40" MaxWidth="250" MaxHeight="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Content="Сохранить" Margin="154,242,-140,77" Click="SaveButton_Click" MinWidth="200" MinHeight="50" MaxWidth="200" MaxHeight="50"/>
    </Grid>
</Window>